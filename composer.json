{
    "name": "gustavosantos/api-core",
    "description": "ApiCore fornece respostas de requisições de maneira simples e personalizada, exceções e validadores (baseado em recursos do laminas).",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "keywords": [
        "exception",
        "response",
        "custom response",
        "custom response zend",
        "psr",
        "psr-4"
    ],
    "authors": [
        {
            "name": "Gustavo Freze de Araujo Santos",
            "email": "gustavo.freze@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.3.6",
        "gustavosantos/status-http": "^1.0",
        "jms/serializer": "^3.8",
      "ext-json": "*",
        "laminas/laminas-diactoros": "^2.3",
        "psr/container": "^1.0",
        "symfony/validator": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "ApiCore\\": "ApiCore/src/"
        }
    }
}
